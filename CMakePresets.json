{
	"version": 3,
	"configurePresets": [
		{
			"name": "default",
			"generator": "Ninja",
			"cacheVariables": {
				"CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
				"CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
			}
		},
		{
			"name": "msvc-debug",
			"inherits": "default",
			"binaryDir": "${sourceDir}/build/Debug-msvc",
			"cacheVariables": {
				"CMAKE_CXX_COMPILER": "cl",
				"CMAKE_BUILD_TYPE": "Debug"
			}
		},
		{
			"name": "msvc-release",
			"inherits": "default",
			"binaryDir": "${sourceDir}/build/Release-msvc",
			"cacheVariables": {
				"CMAKE_CXX_COMPILER": "cl",
				"CMAKE_BUILD_TYPE": "Release"
			}
		},
		{
			"name": "gcc-debug",
			"inherits": "default",
			"binaryDir": "${sourceDir}/build/Debug-gcc",
			"cacheVariables": {
				"CMAKE_CXX_COMPILER": "g++",
				"CMAKE_BUILD_TYPE": "Debug"
			}
		},
		{
			"name": "gcc-release",
			"inherits": "default",
			"binaryDir": "${sourceDir}/build/Release-gcc",
			"cacheVariables": {
				"CMAKE_CXX_COMPILER": "g++",
				"CMAKE_BUILD_TYPE": "Release"
			}
		},
		{
			"name": "clang-debug",
			"inherits": "default",
			"binaryDir": "${sourceDir}/build/Debug-clang",
			"cacheVariables": {
				"CMAKE_CXX_COMPILER": "clang++",
				"CMAKE_BUILD_TYPE": "Debug"
			}
		},
		{
			"name": "clang-release",
			"inherits": "default",
			"binaryDir": "${sourceDir}/build/Release-clang",
			"cacheVariables": {
				"CMAKE_CXX_COMPILER": "clang++",
				"CMAKE_BUILD_TYPE": "Release"
			}
		}
	]
}
