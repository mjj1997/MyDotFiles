{
	"version": 3,
	"configurePresets": [
		{
			"name": "default",
			"binaryDir": "${sourceDir}/build",
            		"generator": "Ninja",
			"cacheVariables": {
				"CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
				"CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                		"CMAKE_CXX_COMPILER": "clang++",
				"CMAKE_CXX_FLAGS": "-std=c++17 -Wall -Werror -Weffc++ -Wextra -Wconversion -Wsign-conversion -pedantic-errors"
			}
		}
	]
}
